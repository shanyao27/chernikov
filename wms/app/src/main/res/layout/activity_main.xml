<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_74dp"
        android:layout_height="@dimen/_66dp"
        android:layout_marginTop="@dimen/_20dp"
        android:paddingBottom="@dimen/_10dp"
        android:src="@drawable/login_logo"
        android:contentDescription="@string/login_logo_description"/>

    <TextView
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/_30dp"
        android:fontFamily="@string/mainstyle"
        android:gravity="center"
        android:text="@string/warehouse_pro"
        android:textSize="@dimen/_30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_55dp">

        <EditText
            android:id="@+id/login_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:hint="@string/login"
            android:autofillHints="@string/login"
            android:background="@drawable/views_backgrounds"
            android:fontFamily="@string/mainstyle"
            android:inputType="text" />

        <EditText
            android:id="@+id/password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/views_backgrounds"
            android:fontFamily="@string/mainstyle"
            android:hint="@string/password"
            android:autofillHints="@string/password"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_55dp"
        android:paddingVertical="@dimen/_20dp">

        <Button
            android:id="@+id/signIn_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55dp"
            android:fontFamily="@string/mainstyle"
            android:backgroundTint="@color/blue"
            android:text="@string/sign_in"
            android:textSize="@dimen/_16sp"/>

        <TextView
            android:id="@+id/forgot_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/mainstyle"
            android:paddingTop="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/blue"
            android:textSize="@dimen/_13sp"/>

    </LinearLayout>

</LinearLayout>